	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^7.15.0",
		"@typescript-eslint/parser": "^7.15.0",
		"eslint": "^8.57.0",
		"typescript": "^5.2.2",
		"vitest": "^0.34.1",
		"jsdom": "^22.0.0",
		"@testing-library/react": "^14.0.0",
		"@testing-library/jest-dom": "^6.0.0",
		"@types/jest": "^29.5.0"
	}
}
