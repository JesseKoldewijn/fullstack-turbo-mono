{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"test": {
			"persistent": true
		},
		"lint": {
			"persistent": true
		},
		"clean": {
			"cache": false
		}
	}
}
